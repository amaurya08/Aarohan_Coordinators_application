<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_columnWeight="1"
    android:background="@drawable/background_button_main_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/layour1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/myimgreg"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myimgreg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comicsansmsregular"
                android:text="Profile Picture"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:paddingLeft="20dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/profname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/comicsansmsregular"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profname"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/comicsansmsregular"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="RegNo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profclg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profreg"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/comicsansmsregular"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="clg"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


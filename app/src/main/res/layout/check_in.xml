<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/shadow_button"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comicsansmsregular"
        android:gravity="center"
        android:padding="3dp"
        android:background="@color/blueTheme"
        android:text="Checked in Student"
        android:textColor="@color/whiteTheme"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listcheck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@color/whiteTheme"
        android:dividerHeight="5dp"
        android:padding="5dp"
        android:layout_marginTop="10sp"
        android:layout_weight="9.97" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_layout_background"
        android:fontFamily="@font/comicsansmsregular"
        android:textColor="@color/whiteTheme"
        android:text="Check In Scan"
        android:id="@+id/cambutton"
        />
</LinearLayout>

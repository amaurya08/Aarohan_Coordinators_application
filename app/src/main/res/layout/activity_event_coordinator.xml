<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_button"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="org.poornima.aarohan.aarohan_2018forcoorfinators.EventCoordinatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@color/blueTheme" />

            <TextView
                android:id="@+id/inittxt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/comicsansmsregular"
                android:gravity="center"
                android:text="N"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nametxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inittxt"
                android:fontFamily="@font/comicsansmsregular"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_layout_background"
            android:fontFamily="@font/comicsansmsregular"
            android:padding="5dp"
            android:text="@string/your_events"
            android:textAlignment="center"
            android:textColor="@color/whiteTheme"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/eventlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2.9"
            android:divider="@color/whiteTheme"
            android:dividerHeight="5dp"
            android:fontFamily="@font/comicsansmsregular"
            android:padding="10dp"
            tools:ignore="NestedWeights" />


        <Button
            android:id="@+id/logoutbut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_layout_background"
            android:fontFamily="@font/comicsansmsregular"
            android:text="LOG OUT"
            android:textColor="@color/whiteTheme"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>

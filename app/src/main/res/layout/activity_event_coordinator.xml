<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="org.poornima.aarohan.aarohan_2018forcoorfinators.EventCoordinatorActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0sp"
       android:layout_weight="1">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="120sp"
               android:layout_height="120sp"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:src="@color/blueTheme"
               />
           <TextView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:fontFamily="@font/comicsansmsregular"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:text="N"
               android:gravity="center"
               android:textSize="60sp"
               android:textColor="#ffffff"
               android:textStyle="bold"
               android:id="@+id/inittxt" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Name"
               android:id="@+id/nametxt"
               android:fontFamily="@font/comicsansmsregular"
               android:gravity="center"
               android:textColor="@color/colorPrimaryDark"
               android:layout_below="@+id/inittxt"
               android:layout_marginTop="25dp"
               android:textSize="30sp"
               android:textStyle="bold"
               />

       </RelativeLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/eventlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:dividerHeight="5dp"
            android:fontFamily="@font/comicsansmsregular"
            android:padding="10dp" />


        <Button
            android:id="@+id/logoutbut"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button_main_transparent"
            android:fontFamily="@font/comicsansmsregular"
            android:text="LOG OUT"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>


</LinearLayout>

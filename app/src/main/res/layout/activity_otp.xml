<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTheme"
    android:orientation="vertical"
    tools:context="org.poornima.aarohan.aarohan_2018forcoorfinators.OTPActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/trashco"
        android:gravity="center"
        android:text="AAROHAN"
        android:textColor="@color/blueTheme"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/shogunsclan"
        android:gravity="center"
        android:text="Towards The Horizon"
        android:textColor="@color/blueTheme"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/otpbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        android:backgroundTint="@color/blueTheme"
        android:ems="10"
        android:gravity="left"
        android:hint="Enter OTP Here"
        android:inputType="number"
        android:textColorHint="@color/blueTheme" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/verifyotp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Resend OTP"
        android:textColor="@color/blueTheme" />

    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verifyotp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/blueTheme"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible" />

    <Button
        android:id="@+id/verifyotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/otpbox"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="102dp"
        android:background="@drawable/shadow_button"
        android:fontFamily="@font/comicsansmsregular"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Verify OTP"
        android:textSize="15sp" />
</RelativeLayout>

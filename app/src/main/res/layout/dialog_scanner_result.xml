<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameofstudent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/colgtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametxt"
        android:text="@string/collegename"
        android:textSize="15sp" />

    <Button
        android:id="@+id/okbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colgtxt"
        android:text="@string/ok_dialoguebox" />

    <Button
        android:id="@+id/cancelbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colgtxt"
        android:layout_toEndOf="@+id/okbut"
        android:text="@string/cancel_dialoguebox" />
</RelativeLayout>